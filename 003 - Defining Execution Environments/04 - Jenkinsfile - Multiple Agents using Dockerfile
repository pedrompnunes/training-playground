pipeline {
    agent none 
    stages {
        stage('MAVEN') {
            agent {
	    dockerfile {
		filename '04 - Dockerfile - Maven'
        	dir '003 - Defining Execution Environments'
		
		
    }
    }
	 steps {
            	echo "Maven"
		sh 'mvn --version'
              
            }	
        }
        stage('NPM') {
            agent {
	    dockerfile {
		filename '04 - Dockerfile - NPM'
        	dir '003 - Defining Execution Environments'
		
		
    }
    }
	     steps {
            	echo "NPM"
		sh 'npm --version'
                
            }
            }
        }
    }

